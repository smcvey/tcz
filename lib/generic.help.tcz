Also, see '%g%l%<longdate%>%x', '%g%l%<@?realtime%>%x', '%g%l%<@?interval%>%x', '%g%l%<@?datetime%>%x', '%g%l%<@?time%>%x', '%g%l%<@?timediff%>%x' and '%g%l%<date stamps%>%x'.

