   %(@end%)%]
<-SEPARATOR->
Also, see '%g%l%<@?boolean%>%x', '%g%l%<@?alpha%>%x', '%g%l%<@?digit%>%x', '%g%l%<@?alnum%>%x', '%g%l%<@?punct%>%x', '%g%l%<@?isupper%>%x', '%g%l%<@?islower%>%x' and '%g%l%<advanced queries%>%x'.

%COMMENT --------------------------------------------------------------------->

