<-SEPARATOR->
Also, see '%g%l%<@?averageactive%>%x', '%g%l%<@?averagetime%>%x', '%g%l%<@?totalidle%>%x', '%g%l%<@?totalactive%>%x', '%g%l%<@?totaltime%>%x' and '%g%l%<@?interval%>%x'.

